<div class="container">
  <div style="margin-top: 300px;">
    <% if flash[:message] %>
      <h5><%= flash[:message] %></h5>
    <% end %>

    <%= form_tag '/login' do %>
      <%= label_tag :email %>
      <%= text_field_tag :email %>

      <%= label_tag :password %>
      <%= password_field_tag :password %>
      <%= submit_tag "Sign In" %>
    <% end %>

    <p><%= link_to('Log in with Facebook!', '/auth/facebook') %></p>
  </div>

</div>
