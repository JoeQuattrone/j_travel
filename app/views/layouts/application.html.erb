<!DOCTYPE html>
<html>
  <head>
    <title>J-Travel</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Travello template project">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "bootstrap.min.css" %>
    <%= stylesheet_link_tag "font-awesome.min.css" %>
    <%= stylesheet_link_tag "owl.carousel.css" %>
    <%= stylesheet_link_tag "owl.theme.default.css" %>
    <%= stylesheet_link_tag "animate.css" %>
    <%= stylesheet_link_tag "main_styles.css" %>
    <%= stylesheet_link_tag "responsive.css" %>
    <%= stylesheet_link_tag "home.css" %>
  </head>

  <body>
    <div class="super_container">
      <!-- Header -->

    	<header class="header">
    		<div class="container">
    			<div class="row">
    				<div class="col">
    					<div class="header_content d-flex flex-row align-items-center justify-content-start">
    						<div class="header_content_inner d-flex flex-row align-items-end justify-content-start">
    							<div class="logo"><%= link_to "J-Travel", root_path %></div>
    							<nav class="main_nav">
    								<ul class="d-flex flex-row align-items-start justify-content-start">
    									<li class="active"><%= link_to "Home", root_path %></li>
    									<li><a href="#" class="disabled">About us</a></li>
    									<li><a href="#" class="disabled">Contact</a></li>

                      <% if @user && !@user.id.nil? %>
      									<li><%= link_to "My Profile", user_path(@user) %></li>
                        <li><%= link_to "Logout", logout_path %></li>
                      <% else %>
                        <li><%= link_to "Sign In", signin_path %></li>
                        <li><%= link_to "Register", new_user_path %></li>
                      <% end %>

    								</ul>
    							</nav>
    							<div class="header_phone ml-auto">Call us: 05 445 678 3379</div>

    							<!-- Hamburger -->

    							<div class="hamburger ml-auto">
    								<i class="fa fa-bars" aria-hidden="true"></i>
    							</div>

    						</div>
    					</div>
    				</div>
    			</div>
    		</div>

    	</header>

    	<!-- Menu -->

    	<div class="menu">
    		<div class="menu_header d-flex flex-row align-items-center justify-content-start">
    			<div class="menu_logo"><a href="index.html">J-Travel</a></div>
    			<div class="menu_close_container ml-auto"><div class="menu_close"><div></div><div></div></div></div>
    		</div>
    		<div class="menu_content">
    			<ul>
    				<li class="active"><%= link_to "Home", root_path %></li>
    				<li><a href="#" class="disabled">About us</a></li>
    				<li><a href="#"class="disabled">Contact</a></li>

            <% if @user && !@user.id.nil? %>
              <li><%= link_to "My Profile", user_path(@user) %></li>
              <li><%= link_to "Logout", logout_path %></li>
            <% else %>
              <li><%= link_to "Sign In", signin_path %></li>
              <li><%= link_to "Register", new_user_path %></li>
            <% end %>
    			</ul>
    		</div>
    		<div class="menu_social">
    			<div class="menu_phone ml-auto">Call us: 05 445 678 3379</div>
    			<ul class="d-flex flex-row align-items-start justify-content-start">
    				<li><a href="https://github.com/JoeQuattrone" target="_blank"><i class="fa fa-github" aria-hidden="true"></i></a></li>
    				<li><a href="https://www.facebook.com/joe.quattrone.7" target="_blank"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
    				<li><a href="https://www.linkedin.com/in/joseph-quattrone-47382b103/" target="_blank"><i class="fa fa-linkedin" aria-hidden="true"></i></a></li>
    			</ul>
    		</div>
    	</div>



      <%= yield %>
    </div>
    <%= javascript_include_tag "jquery-3.2.1.min.js" %>
  	<%= javascript_include_tag "popper.js" %>
  	<%= javascript_include_tag "bootstrap.min.js" %>
  	<%= javascript_include_tag "owl.carousel.js" %>
  	<%= javascript_include_tag "isotope.pkgd.min.js" %>
  	<%= javascript_include_tag "jquery.scrollTo.min.js" %>
  	<%= javascript_include_tag "easing.js" %>
  	<%= javascript_include_tag "parallax.min.js" %>
  	<%= javascript_include_tag "custom.js" %>
  </body>
</html>
