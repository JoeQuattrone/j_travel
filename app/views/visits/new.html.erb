<div class="container">
  <div class="row hotel-row-show align-items-center">
    <div class="col-sm">
      <%= image_tag (@hotel.image_url), alt: "#{@hotel.name}" %>
    </div>
    <div class="col-md-6">
      <h3><%= @hotel.name %></h3>
      <p><%= @hotel.city.upcase %></p>
      <p><%= @hotel.address %></p>
    </div>
    <div class="col-sm">
      <h2>&#36;<%= @hotel.price %></h2>
      <p>per night</p>
      <a href="<%= hotel_path(@hotel) %>">
      </a>
    </div>
  </div>
    <h4 class="text-center">Hooray! These dates are available.</h4>
    <div class="availablity-form text-center">
      <h4><%= format_start_visit(@visit) %> - <%= format_end_visit(@visit) %></h4>

      <% if current_user %>
      <%= form_tag("/users/#{session[:user_id]}/visits") do %>
        <%= hidden_field_tag(:hotel_id, @hotel.id) %>
        <%= hidden_field_tag(:visit_id, @visit.id) %>
        <%= submit_tag "BOOK NOW", class: "home_search_button" %>
      <% end %>

      <% else %>
        <% flash[:message] = "Login or Register to book a hotel!" %>
        <%= link_to "BOOK NOW", new_user_path %>
      <% end %>
    </div>
  </div>
